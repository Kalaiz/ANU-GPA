<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Give_Feedback">

    <!--Authorship Prateek Arora , u6742441-->

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Q1. Rate the app you are currently using"
        android:textSize="20dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:textColor="#000000"
        android:id="@+id/question1"/>

    <RadioButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/question1"
        android:layout_marginLeft="25dp"
        android:id="@+id/radio_button1"
        android:layout_marginTop="20dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="1-4"
        android:textSize="15dp"
        android:textColor="#000000"
        android:layout_below="@+id/question1"
        android:id="@+id/text_rate"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="70dp"
        />

    <RadioButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/radio_button1"
        android:layout_marginLeft="25dp"
        android:id="@+id/radio_button2"
        android:layout_marginTop="20dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="4-8"
        android:textSize="15dp"
        android:id="@+id/text_rate1"
        android:layout_below="@+id/text_rate"
        android:layout_marginTop="34dp"
        android:layout_marginLeft="70dp"
        android:textColor="#000000"
        />

    <RadioButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/radio_button2"
        android:layout_marginLeft="25dp"
        android:id="@+id/radio_button3"
        android:layout_marginTop="20dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="8-10"
        android:textSize="15dp"
        android:layout_below="@+id/text_rate1"
        android:layout_marginTop="32dp"
        android:layout_marginLeft="70dp"
        android:textColor="#000000"
        />

    <TextView
        android:id="@+id/question2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/radio_button3"
        android:text="Q2. Give the feedback about the app"
        android:layout_marginTop="30dp"
        android:paddingRight="34dp"
        android:layout_centerHorizontal="true"
        android:textColor="#000000"
        android:textSize="20dp" />


    <EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="Enter the feedback"
        android:layout_below="@+id/question2"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:minLines="1"
        android:maxLines="8"
        android:id="@+id/feedback_edit"
        android:layout_marginRight="10dp"/>

    <Button
        android:layout_width="200dp"
        android:layout_height="70dp"
        android:layout_below="@id/feedback_edit"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/submit_feedback"
        android:background="@drawable/buttons"
        android:textColor="#EE82FF"
        android:text="Submit"/>

</RelativeLayout>