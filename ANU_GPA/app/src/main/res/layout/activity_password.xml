<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Password">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="20dp">

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/animation_view"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginTop="10dp"
            app:lottie_autoPlay="true"
            app:lottie_fileName="FingerPrint.json"
            app:lottie_loop="true" />

        <!--Animation from https://lottiefiles.com/663-fingerprint-scan-->
        <!--Code for animation (lottie) https://airbnb.io/lottie/#/android-->

        <TextView
            android:id="@+id/old_pass_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/animation_view"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:text="Old Password"
            android:textColor="#000000"
            android:textSize="15dp" />

        <EditText
            android:id="@+id/old_pass_edittext"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_alignStart="@+id/animation_view"
            android:layout_alignTop="@+id/animation_view"
            android:layout_alignEnd="@+id/animation_view"
            android:layout_marginStart="0dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="242dp"
            android:layout_marginEnd="9dp"
            android:layout_marginRight="10dp"
            android:inputType="textPassword" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Password"
            android:layout_below="@+id/old_pass_edittext"
            android:layout_marginTop="40dp"
            android:textSize="15dp"
            android:layout_marginLeft="15dp"
            android:textColor="#000000"
            android:id="@+id/_pass_text"/>

        <EditText
            android:id="@+id/pass_edittext"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@+id/_pass_text"
            android:layout_alignStart="@+id/old_pass_edittext"
            android:layout_alignEnd="@+id/old_pass_edittext"
            android:layout_marginStart="-10dp"
            android:layout_marginTop="7dp"
            android:layout_marginEnd="0dp"
            android:layout_marginRight="10dp"
            android:inputType="textPassword" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Confirm Password"
            android:layout_below="@+id/pass_edittext"
            android:layout_marginTop="40dp"
            android:textSize="15dp"
            android:layout_marginLeft="15dp"
            android:textColor="#000000"
            android:id="@+id/confirm_pass_text"/>

        <EditText
            android:id="@+id/confirm_pass_edittext"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_alignStart="@+id/pass_edittext"
            android:layout_alignTop="@+id/animation_view"
            android:layout_alignEnd="@+id/pass_edittext"
            android:layout_marginStart="0dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="456dp"
            android:layout_marginEnd="0dp"
            android:layout_marginRight="10dp"
            android:imeOptions="actionDone"
            android:inputType="textPassword" />

        <Button
            android:id="@+id/lock_button"
            android:layout_width="200dp"
            android:layout_height="70dp"
            android:layout_alignTop="@+id/animation_view"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="506dp"
            android:background="@drawable/buttons"
            android:text="Lock"
            android:textColor="#070707" />


    </RelativeLayout>


</ScrollView>