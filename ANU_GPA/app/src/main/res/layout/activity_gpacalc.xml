<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GPACalc">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/hdTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="120dp"
            android:paddingLeft="10dp"
            android:text="Enter the count of courses in which you got HD"
            android:textColor="#000" />

        <EditText
            android:id="@+id/hdEditText"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_below="@+id/hdTextView"
            android:hint="Number Of High Distinctions."
            android:imeOptions="actionNext"
            android:inputType="number"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/dTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/hdEditText"
            android:paddingLeft="10dp"
            android:text="Enter the count of courses in which you got D"
            android:textColor="#000" />

        <EditText
            android:id="@+id/dEditText"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_below="@+id/dTextView"
            android:hint="Number Of Distinctions."
            android:imeOptions="actionNext"
            android:inputType="number"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/cTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/dEditText"
            android:paddingLeft="10dp"
            android:text="Enter the count of courses in which you got C"
            android:textColor="#000" />

        <EditText
            android:id="@+id/cEditText"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_below="@+id/cTextView"
            android:hint="Number Of Credits."
            android:imeOptions="actionNext"
            android:inputType="number"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/pTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/cEditText"
            android:paddingLeft="10dp"
            android:text="Enter the count of courses in which you got Pass"
            android:textColor="#000" />

        <EditText
            android:id="@+id/pEditText"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_below="@+id/pTextView"
            android:hint="Number Of Passes"
            android:imeOptions="actionNext"
            android:inputType="number"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/fTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/pEditText"
            android:paddingLeft="10dp"
            android:text="Enter the count of courses in which you got Fail"
            android:textColor="#000" />

        <EditText
            android:id="@+id/fEditText"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_below="@+id/fTextView"
            android:hint="Number of Fails or equivalents."
            android:imeOptions="actionDone"
            android:inputType="number"
            android:textSize="15dp" />

        <Button
            android:id="@+id/doneButton"
            android:layout_width="150dp"
            android:layout_height="70dp"
            android:layout_below="@+id/fEditText"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            android:text="Done" />

        <TextView
            android:id="@+id/resultTextView"
            android:layout_width="143dp"
            android:layout_height="42dp"
            android:layout_alignBottom="@+id/fEditText"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginStart="174dp"
            android:layout_marginLeft="174dp"
            android:layout_marginTop="65dp"
            android:layout_marginEnd="94dp"
            android:layout_marginRight="94dp"
            android:layout_marginBottom="411dp"
            android:text="RESULT"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/yourGPAisTextView"
            android:layout_width="149dp"
            android:layout_height="27dp"
            android:layout_alignBottom="@+id/hdEditText"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginStart="164dp"
            android:layout_marginLeft="164dp"
            android:layout_marginTop="33dp"
            android:layout_marginEnd="97dp"
            android:layout_marginRight="97dp"
            android:layout_marginBottom="139dp"
            android:text="Your GPA is :"
            android:visibility="invisible" />


    </RelativeLayout>

</ScrollView>